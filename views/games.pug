extends layout

block content
  h1= title
  - var games=[{game_name:"cricket",number_of_players:"11",game_price:500},{game_name:"football",number_of_players:"11",game_price:800},{game_name:"volleyball",number_of_players:"6",game_price:400}]
  div(class="container-fluid")
  div(class="row")
   each g,index  in games
    div(class="col-sm-2" onclick =`buy(${index})`) #{g.game_name}, #{g.number_of_players}, #{g.game_price}
    script.
        function buy(a)
        {
            alert(`You purchased Item ${a+1}`)
        }